.contents
  %p
    = @name 
    さんのページ
    - unless @user.id == current_user.id #現在ログインしているユーザーではない
      - if @isRoom == true #既にroomがある時
        .p.user-show-romm 
          = link_to 'DMを送る', room_path(@roomId), class: 'btn' #既に作成されているroomへ移動
      - else #roomがまだ作成されていない時
        = form_for @room do |f|
          = fields_for @entry do |e|
            = e.hidden_field :user_id, value: @user.id
          = f.submit 'DMを送る', class: 'btn'
  - @posts.each do |post|
    .content
      .img-box  
        = link_to post_path(post) do
          = image_tag post.image.url, size:'600x415'
      .text-box
        .text
          = simple_format(post.text)
        .user-info
          .post-time
            投稿:
            = post.created_at.strftime("%Y年%m月%d日 %H時%M分")
        - if user_signed_in? && current_user.id == post.user.id
          .trash-icon
            = link_to "/posts/#{post.id}", method: :delete do
              = icon("fas", "trash", class: 'icon')
  = paginate(@posts)


